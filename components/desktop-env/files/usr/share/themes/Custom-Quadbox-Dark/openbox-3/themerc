# All windows
border.width: 3
window.label.text.justify: center

# HACK: increasing the size of buttons
window.active.label.text.font: shadow=y:shadowtint=0:shadowoffset=10
window.inactive.label.text.font: shadow=y:shadowtint=0:shadowoffset=10

padding.height: 0
padding.width: 0
window.client.padding.width: 0
window.handle.width: 0


# Active windows
window.active.border.color: #454649

window.active.title.bg: flat solid
window.active.title.bg.color: #454649

window.active.label.bg: parentrelative
window.active.label.text.color: #DFDFDF

window.active.handle.bg: flat solid
window.active.handle.bg.color: #454649
window.active.grip.bg: parentrelative

window.active.button.unpressed.bg: parentrelative
window.active.button.unpressed.image.color: #DFDFDF
window.active.button.toggled.unpressed.bg: parentrelative

window.active.button.pressed.bg: flat solid
window.active.button.pressed.bg.color: #535458
window.active.button.pressed.image.color: #A0A0FF

window.active.button.disabled.bg: flat solid
window.active.button.disabled.bg.color: #454649
window.active.button.disabled.image.color: #888888

window.active.button.hover.bg: flat solid
window.active.button.hover.bg.color: #535458
window.active.button.toggled.hover.bg: flat solid
window.active.button.toggled.hover.bg.color: #535458


# Inactive windows
