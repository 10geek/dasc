# Menus
menu.overlap.x: 2

# HACK: increasing the size of menu items
menu.title.text.font: shadow=y:shadowtint=0:shadowoffset=6
menu.items.font: shadow=y:shadowtint=0:shadowoffset=6

menu.border.width: 1
menu.border.color: #171819

menu.title.bg: flat solid
menu.title.bg.color: #000000
menu.title.text.color: #F3F3F5

menu.items.bg: flat solid
menu.items.bg.color: #262627
menu.items.text.color: #F3F3F5
menu.items.disabled.text.color: #949597

menu.items.active.bg: gradient vertical raised
menu.items.active.bg.color: #3A67BE
menu.items.active.bg.colorTo: #3E78E5
menu.items.active.text.color: #FFFFFF
menu.items.active.disabled.text.color: #A3C2FB

menu.separator.width: 1
menu.separator.padding.width: 0
