# All windows
border.width: 3
window.label.text.justify: center

# HACK: increasing the size of buttons
window.active.label.text.font: shadow=y:shadowtint=0:shadowoffset=10
window.inactive.label.text.font: shadow=y:shadowtint=0:shadowoffset=10

padding.height: 0
padding.width: 0
window.client.padding.width: 0
window.handle.width: 0


# Active windows
window.active.border.color: #F5F5F7

window.active.title.bg: flat solid
window.active.title.bg.color: #F5F5F7

window.active.label.bg: parentrelative
window.active.label.text.color: #444444

window.active.handle.bg: flat solid
window.active.handle.bg.color: #F5F5F7
window.active.grip.bg: parentrelative

window.active.button.unpressed.bg: parentrelative
window.active.button.unpressed.image.color: #444444
window.active.button.toggled.unpressed.bg: parentrelative

window.active.button.pressed.bg: flat solid
window.active.button.pressed.bg.color: #E7E7E8
window.active.button.pressed.image.color: #7C7CC8

window.active.button.disabled.bg: flat solid
window.active.button.disabled.bg.color: #F5F5F7
window.active.button.disabled.image.color: #A2A2A2

window.active.button.hover.bg: flat solid
window.active.button.hover.bg.color: #E7E7E8
window.active.button.toggled.hover.bg: flat solid
window.active.button.toggled.hover.bg.color: #E7E7E8


# Inactive windows
window.inactive.border.color: #D8D8D9

window.inactive.title.bg: flat solid
window.inactive.title.bg.color: #D8D8D9

window.inactive.label.bg: parentrelative
window.inactive.label.text.color: #888888

window.inactive.handle.bg: flat solid
window.inactive.handle.bg.color: #D8D8D9
window.inactive.grip.bg: parentrelative

window.inactive.button.unpressed.bg: parentrelative
window.inactive.button.unpressed.image.color: #888888
window.inactive.button.toggled.unpressed.bg: parentrelative

window.inactive.button.pressed.bg: flat solid
window.inactive.button.pressed.bg.color: #C9C9CA
window.inactive.button.pressed.image.color: #8F8FE6

window.inactive.button.disabled.bg: flat solid
window.inactive.button.disabled.bg.color: #D8D8D9
window.inactive.button.disabled.image.color: #CACACA

window.inactive.button.hover.bg: flat solid
window.inactive.button.hover.bg.color: #C9C9CA
window.inactive.button.toggled.hover.bg: flat solid
window.inactive.button.toggled.hover.bg.color: #C9C9CA


# Menus
menu.overlap.x: 2

# HACK: increasing the size of menu items
menu.title.text.font: shadow=y:shadowtint=0:shadowoffset=6
menu.items.font: shadow=y:shadowtint=0:shadowoffset=6

menu.border.width: 1
menu.border.color: #B9B9B9

menu.title.bg: flat solid
menu.title.bg.color: #E6E6E6
menu.title.text.color: #3C3C3E

menu.items.bg: flat solid
menu.items.bg.color: #FFFFFF
menu.items.text.color: #3C3C3E
menu.items.disabled.text.color: #A2A2A2

menu.items.active.bg: gradient vertical raised
menu.items.active.bg.color: #548DFB
menu.items.active.bg.colorTo: #78A5FC
menu.items.active.text.color: #FFFFFF
menu.items.active.disabled.text.color: #B5CEFC

menu.separator.width: 1
menu.separator.padding.width: 0
menu.separator.padding.height: 2
menu.separator.color: #E6E6E6


# OSD
osd.border.width: 4
